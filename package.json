{
  "name": "@alex_revin/svelte-toast",
  "version": "0.3.7",
  "description": "Simple elegant toast notifications",
  "author": "Jason Lee <jason@zerodevx.com>",
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "sirv docs --no-clear",
    "watch:tailwind": "tailwindcss -i docs/tailwind.css -c docs/tailwind.config.js -o docs/build/global.css -w",
    "watch:docs": "rollup -c -w",
    "dev": "run-p watch:*",
    "lint": "eslint . --ext .js,.svelte,.html,.ts --fix",
    "build:docs": "rollup -c",
    "build:dist": "rollup -c rollup.dist.config.js",
    "build:tailwind": "NODE_ENV=production tailwindcss -i docs/tailwind.css -c docs/tailwind.config.js -o docs/build/global.css -m",
    "build": "run-s lint build:*",
    "test": "cypress run",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "autoprefixer": "^10.2.6",
    "camelcase": "^6.2.0",
    "cypress": "^7.6.0",
    "eslint": "^7.30.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "prismjs": "^1.24.1",
    "rollup": "^2.52.7",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.12",
    "svelte": "^3.38.3",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.3.5"
  },
  "files": [
    "src",
    "dist"
  ],
  "license": "ISC",
  "homepage": "https://zerodevx.github.io/svelte-toast/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexRevin/svelte-toast.git"
  },
  "keywords": [
    "svelte",
    "vanillajs",
    "toast",
    "notifications"
  ],
  "bugs": {
    "url": "https://github.com/AlexRevin/svelte-toast/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {}
}
